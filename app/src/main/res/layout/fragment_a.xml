<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.fran.dosfragmentmismoactivity.FragmentA">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtv_fragment_a_port"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/text_fragment_a" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/btn_ir_activity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:onClick="irActivity2"
            android:text="@string/cambiar_activity" />
    </TableRow>


</TableLayout>
